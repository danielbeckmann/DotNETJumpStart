<Page
    x:Class="ImageApp.SplashPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImageApp"
    xmlns:vm="using:ImageApp.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:LoginViewModel />
    </Page.DataContext>
    
    <Grid>
        <Image Source="/Assets/Image.png" VerticalAlignment="Top" Margin="0,120,0,0" Width="140"/>
        <ProgressRing Margin="0,260,0,0" IsActive="True" />
    </Grid>
</Page>
