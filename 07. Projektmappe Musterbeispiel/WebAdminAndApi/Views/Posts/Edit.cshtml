@model WebAdminAndApi.Models.Post

@{
    ViewBag.Title = "Bearbeiten";
}

<h2>Bearbeiten</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Post</legend>
        @Html.HiddenFor(model => model.Id)

        @Html.HiddenFor(model => model.Image.Id)
        @Html.HiddenFor(model => model.Image.FileName)

        <div class="editor-label">
            Titel
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="editor-label">
            Bild:
        </div>
        <div class="editor-field">
            <p>
                <img src="~/Uploads/@Model.Image.FileName" width="100" alt="Bild" />
            </p>
            <input type="file" name="file" id="file" />
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Zurück", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
